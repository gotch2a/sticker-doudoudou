{
  "name": "sticker-doudou-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "npm run build && electron-builder",
    "tauri": "tauri",
    "tauri-dev": "tauri dev",
    "tauri-build": "tauri build"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@paypal/paypal-js": "^8.3.0",
    "@paypal/react-paypal-js": "^8.8.3",
    "@supabase/supabase-js": "^2.56.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.14",
    "autoprefixer": "^10.0.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "dotenv": "^17.2.2",
    "framer-motion": "^10.16.5",
    "lucide-react": "^0.294.0",
    "multer": "^1.4.5-lts.1",
    "next": "14.0.3",
    "nodemailer": "^6.9.7",
    "postcss": "^8",
    "react": "^18",
    "react-dom": "^18",
    "resend": "^6.0.1",
    "tailwind-merge": "^2.0.0",
    "tailwindcss": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^8.2.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "eslint": "^8",
    "eslint-config-next": "14.0.3",
    "typescript": "^5",
    "wait-on": "^7.2.0"
  },
  "main": "public/electron.js",
  "build": {
    "appId": "com.doudoudou.app",
    "productName": "Doudoudou",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "public/electron.js",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
